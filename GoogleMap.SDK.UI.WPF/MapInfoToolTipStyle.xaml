<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MapInfoToolTipStyle" TargetType="ToolTip">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="HasDropShadow" Value="True"/>
        <Setter Property="Placement" Value="Mouse"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="10"
                        SnapsToDevicePixels="True">
                        <StackPanel>
                            <!-- 標題 -->
                            <TextBlock Text="{Binding Title}"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Foreground="#222"/>

                            <!-- 評價 -->
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="4.2" Foreground="Black" FontSize="14"/>
                                <TextBlock Text=" ★★★★☆" Foreground="Orange" FontSize="14" Margin="4,0,0,0"/>
                                <TextBlock Text=" (12,746)" Foreground="Gray" FontSize="14" Margin="4,0,0,0"/>
                            </StackPanel>

                            <!-- 類別與圖示 -->
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="大型超級市場" Foreground="Gray" FontSize="13"/>
                                <TextBlock Text=" ♿" FontSize="13" Margin="4,0,0,0"/>
                            </StackPanel>

                            <!-- 地址 -->
                            <TextBlock Text="{Binding Address}" Foreground="Black" FontSize="13" Margin="0,2,0,0"/>

                            <!-- 狀態 -->
                            <TextBlock Text="{Binding OpeningTime}" Foreground="Green" FontSize="13" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>